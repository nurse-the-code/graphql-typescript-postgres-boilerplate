{
  "compilerOptions": {
    "outDir": "dist", // where to put the compiled JS files
    "target": "ES2021", // which level of JS support to target
    "module": "ES2020", // which system for the program AMD, UMD, System, CommonJS
    "moduleResolution": "node",

    // Recommended: Compiler complains about expressions implicitly typed as 'any'
    "noImplicitAny": true
  },
  "include": ["src"], // which files to compile
  "exclude": ["**/node_modules"] // which files to skip
}
